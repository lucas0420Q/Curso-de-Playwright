{
  "name": "curso-de-playwright",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Curso completo de Playwright con grabaci칩n de video y generaci칩n autom치tica de c칩digo",
  "scripts": {
    "test": "playwright test --reporter=html",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "show-report": "playwright show-report",
    "record": "playwright codegen --target=playwright-test --output tests/mi-flujo.spec.ts",
    "record:ff": "playwright codegen -b firefox --target=playwright-test --output tests/mi-flujo-ff.spec.ts",
    "record:testid": "playwright codegen --test-id-attribute=data-testid --target=playwright-test --output tests/mi-flujo.spec.ts",
    "record:continental": "playwright codegen --test-id-attribute=data-testid --target=playwright-test --output tests/CRM-Continental/mi-flujo-continental.spec.ts http://localhost:3000/cases",
    "record:bepsa": "playwright codegen --test-id-attribute=data-testid --target=playwright-test --output tests/CRM-Bepsa/mi-flujo-bepsa.spec.ts",
    "install-browsers": "npx playwright install --with-deps",
    "clean:debug": "Remove-Item debug\\screenshots\\* -Force -ErrorAction SilentlyContinue; Remove-Item debug\\videos\\* -Force -ErrorAction SilentlyContinue; Remove-Item debug\\traces\\* -Force -ErrorAction SilentlyContinue",
    "test:debug-mode": "set DEBUG=true && playwright test --reporter=html",
    "open:debug": "start debug",
    "demo:grabacion": "node scripts/demo-grabacion.js"
  },
  "keywords": ["playwright", "testing", "automation", "e2e", "codegen", "video"],
  "author": "Lucas Zaracho",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.0.3"
  }
}
